{
  "name": "universal-converter",
  "version": "1.0.0",
  "description": "萬用萬向轉檔工具 - 支援多種格式的檔案轉換",
  "main": "electron-standalone.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "converter",
    "file-conversion",
    "ffmpeg",
    "sharp",
    "pandoc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.universal.converter",
    "productName": "萬用轉檔工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "server.js",
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": "C:/ffmpeg/bin",
        "to": "ffmpeg/bin",
        "filter": [
          "*.exe",
          "*.dll"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "萬用轉檔工具"
    },
    "portable": {
      "artifactName": "萬用轉檔工具-portable.exe"
    }
  }
}
