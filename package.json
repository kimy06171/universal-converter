{
  "name": "universal-converter",
  "version": "1.0.0",
  "description": "萬用萬向轉檔工具 - 支援多種格式的檔案轉換",
  "main": "electron-hybrid.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "electron-test": "electron electron-simple-test.js",
    "build-win": "node build-with-packager.js win32",
    "build-mac": "node build-with-packager.js darwin",
    "build-linux": "node build-with-packager.js linux",
    "build-all": "node build-all-platforms.js",
    "pack-win": "npm run build-win && npm run zip-win",
    "pack-mac": "npm run build-mac && npm run zip-mac",
    "zip-win": "powershell Compress-Archive -Path 'dist-packager-new/Universal-Converter-win32-x64' -DestinationPath 'releases/Universal-Converter-Windows.zip' -Force",
    "zip-mac": "cd dist-packager-new && zip -r ../releases/Universal-Converter-Mac.zip Universal-Converter-darwin-x64"
  },
  "keywords": [
    "converter",
    "file-conversion",
    "ffmpeg",
    "sharp",
    "cross-platform"
  ],
  "author": "kimy06171",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.universal.converter",
    "productName": "萬用轉檔工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-standalone.js",
      "electron-preload.js",
      "server.js",
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      ".env"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    }
  }
}